<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentSlide2">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_baseline_send_time_extension_24" />

    <TextView
        android:id="@+id/slide2Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/slide2_desc"
        android:gravity="center_horizontal"
        android:textColor="@color/vivid_tangerine"
        android:textSize="20sp"
        android:layout_below="@id/imageView3"
        android:layout_centerHorizontal="true"/>


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@id/slide2Text"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_baseline_arrow_forward_24" />
</RelativeLayout>